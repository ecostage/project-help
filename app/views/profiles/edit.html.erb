<div class="row">
  <div class="col-sm-2">
    <%= image_tag @user.avatar.url(:square), class: 'img-circle thumb' %>
  </div>
  <div class="col-sm-6">
    <h2><%= @user.email %></h2>
    <%= form_for @user, url: myprofile_path do |f| %>
      <div class="form-group">
        <%= f.text_field :name, class: "form-control", placeholder: "Name" %>
      </div>

      <div class="form-group">
        <label> Tipo de usu√°rio: </label>
        <%= t(@user.user_type) %>
      </div>

      <div class="form-group">
        <%= f.file_field :avatar %>
      </div>

      <%= f.submit t('links.save'), class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
